@{
    Layout = "_AdminLayout";
}
@model AddStudentViewModel

<h1>Add Student</h1>
<form asp-controller="Student" asp-action="AddStudent" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-contol" asp-for="Name" name="name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-contol" asp-for="Email" name="email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Phone"></label>
        <input class="form-contol" asp-for="Phone" name="phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <input type="submit" value="Add Student"/>
</form>
