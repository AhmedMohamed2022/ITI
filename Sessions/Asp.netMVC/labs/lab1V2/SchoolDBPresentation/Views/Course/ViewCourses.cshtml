@{
    Layout = "_AdminLayout";
}
@model List<Course>
<h1>Our Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Course Name</th>
            <th scope="col">Course Credits</th>
            <th scope="col">Action</th>
            @* <th scope="col">Clasroom Id</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach(var course in Model)
        {            
            <tr>
                <th scope="row">@course.Id</th>
                <td>@course.Name</td>
                <td>@course.Credits</td>
                <td>
                    <a asp-controller="Course" asp-action="EditCourse" asp-route-id="@course.Id">Edit Course</a>
                    <form asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@course.Id" method="post">
                        <input type="submit" name="name" value="Delete Course" />
                    </form>
                </td>
                @* <td>@course.ClassroomId</td> *@
            </tr>
        }
    </tbody>
</table>