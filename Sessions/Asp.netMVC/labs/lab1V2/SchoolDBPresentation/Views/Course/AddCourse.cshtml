@{
    Layout = "_AdminLayout";
}
@model Course

<form asp-controller="Course" asp-action="AddCourse" method="post">
    <div class="form-group">
        <label for="CourseName">Course Name</label>
        <input asp-for="Name" class="form-control" id="CourseName" aria-describedby="CourseNameHelp" placeholder="Enter Course Name">
        <small id="CourseNameHelp" class="form-text text-muted">CourseName To Assign To All School Participatns.</small>
    </div>
    <div class="form-group">
        <label for="CourseCredit">Course Credits</label>
        <input asp-for="Credits" class="form-control" id="CourseCredit" placeholder="Course Credit">
    </div>
    <input type="submit" value="Add Course" />
</form>